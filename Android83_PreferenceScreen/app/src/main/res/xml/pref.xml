<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="입력 요소">

        <EditTextPreference
            android:defaultValue="안녕하세요"
            android:key="data1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="문자열 입력"
            app:dependency="data2"
            app:dialogIcon="@android:drawable/ic_menu_add"
            app:dialogMessage="문자열 입력 요소 입니다"
            app:dialogTitle="문자열 입력"
            app:icon="@android:drawable/ic_menu_agenda"
            app:summary="문자열 입력 요소입니다" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="data2"
            android:title="체크박스"
            app:icon="@android:drawable/ic_menu_camera"
            app:summary="체크박스 요소입니당"
            app:summaryOff="체크해제되어있습니다"
            app:summaryOn="체크되어있습니다" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="data3"
            android:title="스위치"
            app:icon="@android:drawable/ic_lock_silent_mode_off"
            app:summary="스위치 요소입니다"
            app:summaryOff="스위치 off"
            app:summaryOn="스위치 on" />
    </PreferenceCategory>
    <PreferenceCategory android:title="리스트요소">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/title_list"
            android:entryValues="@array/value_list"
            android:key="data4"
            android:title="단일 리스트 요소"
            app:dialogIcon="@android:drawable/ic_menu_directions"
            app:icon="@android:drawable/ic_menu_call"
            app:summary="단일 리스트 요소입니다" />
        <MultiSelectListPreference
            android:defaultValue="@array/default_list"
            android:entries="@array/title_list"
            android:entryValues="@array/value_list"
            android:key="data5"
            android:title="다중 리스트 요소"
            app:dialogIcon="@android:drawable/ic_menu_send"
            app:icon="@android:drawable/ic_menu_help"
            app:summary="다중 리스트 요소입니당" />
    </PreferenceCategory>
</PreferenceScreen>